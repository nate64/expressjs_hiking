<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <thead>
  <th>Title</th>
  <th>Edit</th>
  <th>x</th>
</thead>

 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>My Hikes</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add Hike</h3>
       <form action='/hiking' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
       <% var url = "/hiking/" + hiking.id + "?_method=DELETE" %>
        <tr>
          <td><%= hiking.title %></td>
          <td>
            <form method="POST" action=<%= url %>>
              <button class="btn red">Delete</button>
            </form>
            </td>
          </tr>
          <% var url = "/hiking/" + hiking.id + "?_method=DELETE" %>
          <% var editUrl = "hiking/" + hiking.id + "/edit" %>
          <tr>
            <td><%= hiking.title %></td>
            <td>
              <a class="btn" href=<%= editUrl %>>Edit</a>
            </td>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>x</th>
       </thead>
       <tbody>
         <% hiking.forEach( function(hiking) { %>
           <tr>
             <td><%= hiking.title %></td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>